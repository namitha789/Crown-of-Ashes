# Auto detect text files and perform LF normalization
* text=auto

# Unity YAML files should always use LF
*.meta eol=lf
*.unity eol=lf
*.prefab eol=lf
*.asset eol=lf
*.mat eol=lf
*.anim eol=lf
*.controller eol=lf
*.overrideController eol=lf
*.physicMaterial eol=lf
*.physicsMaterial2D eol=lf
*.playable eol=lf
*.mask eol=lf
*.brush eol=lf
*.flare eol=lf
*.fontsettings eol=lf
*.giparams eol=lf
*.renderTexture eol=lf
*.spriteatlas eol=lf
*.terrainlayer eol=lf
*.mixer eol=lf
*.shadervariants eol=lf
*.preset eol=lf

# Unity project files
*.json eol=lf
*.compute eol=lf
*.cginc eol=lf
*.shader eol=lf

# Scripts - use LF for consistency across platforms
*.cs eol=lf
*.js eol=lf
*.boo eol=lf

# Documentation
*.md eol=lf
*.txt eol=lf

# Unity packages
*.unitypackage filter=lfs diff=lfs merge=lfs -text

